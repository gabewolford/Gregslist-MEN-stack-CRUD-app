<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs', {title: `${product.name} | Gregslist`}) %>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <main>

        <div class="row">
                <img src="<%= product.photo %>">
                <h4><%= product.name %> - <%= product.condition %></h4>
                <p>Asking Price: $<%= product.askingPrice %>.00</p>
                <% if (product.state != null) { %>
                    <p>City: <%= product.city %></p>
                    <p>State: <%= product.state %> </p>
                    <% } else { %>
                    <p>Location: <%= product.city %></p>
                    <% } %>
                <p>Country: <%= product.country %></p>
                <p>Available: <%= product.quantity %></p>
                <p><%= product.description %></p>
                <p>Date Listed: <%= product.dateListed.toLocaleDateString() %></p>
        </div>

        <div>
            <button class="btn"><a href="/products/<%= product._id %>/edit">Edit</a></button>
            <form method="POST" action="/products/<%= product._id %>?_method=DELETE">
                <input class="btn" type="submit" value="Delete" />
        </div>
        
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>